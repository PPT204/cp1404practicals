BoxLayout:
    orientation: "vertical"
    spacing: 10
    padding: 10

    # TOP SECTION (Blue box in prac)
    BoxLayout:
        orientation: "horizontal"
        spacing: 10

        TextInput:
            id: input_number
            text: ""
            input_filter: "float"
            multiline: False

        Button:
            text: "Square"
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            text: "0"
            color: (1, 0, 1, 1)   # pink (R, G, B, A)
            font_size: 40

    # BOTTOM SECTION
    Label:
        text: 'Enter a number and press "Square"'
        font_size: 20
