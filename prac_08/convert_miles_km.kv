BoxLayout:
    orientation: "vertical"
    spacing: 10
    padding: 10

    # Top layout: TextInput + Up/Down buttons
    BoxLayout:
        orientation: "horizontal"
        spacing: 10

        TextInput:
            id: input_miles
            text: "0"
            input_filter: "float"
            multiline: False

        BoxLayout:
            orientation: "vertical"

            Button:
                text: "Up"
                on_press: app.handle_increment(1)

            Button:
                text: "Down"
                on_press: app.handle_increment(-1)

    Button:
        text: "Convert miles to km"
        on_press: app.handle_convert()

    Label:
        id: output_km
        text: "0.0"
        font_size: 40
        color: (1, 1, 0, 1)
